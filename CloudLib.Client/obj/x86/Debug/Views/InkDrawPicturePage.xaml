<Page x:ConnectionId='1'
    x:Class="CloudLib.Client.Views.InkDrawPicturePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource PageStyle}"
    xmlns:viewModels="using:CloudLib.Client.ViewModels"
    mc:Ignorable="d">
    <Page.Resources>
        <DataTemplate x:Key="BigHeaderTemplate"                                                 >
            <RelativePanel x:ConnectionId='7'>
                <TextBlock x:Uid="InkDrawPictureHeader" Margin="{StaticResource SmallLeftMargin}" MaxLines="1" TextTrimming="CharacterEllipsis" RelativePanel.LeftOf="toolbar" RelativePanel.AlignLeftWithPanel="True" />
                <InkToolbar x:ConnectionId='8' x:Name="toolbar" Background="Transparent"                             RelativePanel.AlignHorizontalCenterWithPanel="True">
                   <InkToolbarCustomToggleButton x:ConnectionId='17' x:Uid="InkDrawPicture_TouchInkingButton" Background="Transparent"                                              >
                        <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" Glyph="&#xED5F;" />
                    </InkToolbarCustomToggleButton>
                    <InkToolbarCustomToggleButton x:ConnectionId='18' x:Uid="InkDrawPicture_MouseInkingButton" Background="Transparent"                                              >
                        <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" Glyph="&#xE962;" />
                    </InkToolbarCustomToggleButton>
                </InkToolbar>
                <CommandBar x:Name="topCommandBar" Style="{StaticResource InkCommandBarStyle}" RelativePanel.RightOf="toolbar" RelativePanel.AlignRightWithPanel="True">
                    <CommandBar.PrimaryCommands>
                        <AppBarButton x:ConnectionId='10' x:Uid="InkDrawPicture_ZoomInButton" Icon="ZoomIn"                                  BorderBrush="Transparent" BorderThickness="0,0,0,0" />
                        <AppBarButton x:ConnectionId='11' x:Uid="InkDrawPicture_ZoomOutButton" Icon="ZoomOut"                                   BorderBrush="Transparent" BorderThickness="0,0,0,0" />
                    </CommandBar.PrimaryCommands>
                    <CommandBar.SecondaryCommands>
                        <AppBarButton x:ConnectionId='12' x:Uid="InkDrawPicture_OriginalSizeButton" Icon="FullScreen"                                     BorderBrush="Transparent" BorderThickness="0,0,0,0" />
                        <AppBarButton x:ConnectionId='13' x:Uid="InkDrawPicture_FitToScreenButton"                                       BorderBrush="Transparent" BorderThickness="0,0,0,0">
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" Glyph="&#xE73F;" />
                        </AppBarButton>
                        <AppBarSeparator />
                        <AppBarButton x:ConnectionId='14' x:Uid="InkDrawPicture_OpenImageButton"                                     BorderBrush="Transparent" BorderThickness="0,0,0,0" >
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" Glyph="&#xEB9F;" />
                        </AppBarButton>
                        <AppBarButton x:ConnectionId='15' x:Uid="InkDrawPicture_SaveImageButton" Icon="Save"                                     BorderBrush="Transparent" BorderThickness="0,0,0,0" />
                        <AppBarSeparator/>
                        <AppBarButton x:ConnectionId='16' x:Uid="InkDrawPicture_ClearAllButton" Icon="Delete"                                    BorderBrush="Transparent" BorderThickness="0,0,0,0" />
                    </CommandBar.SecondaryCommands>
                </CommandBar>
            </RelativePanel>
        </DataTemplate>
        <DataTemplate x:Key="SmallHeaderTemplate"                                                >
            <InkToolbar x:ConnectionId='3'  HorizontalAlignment="Center"                             RelativePanel.AlignHorizontalCenterWithPanel="True">
                <InkToolbarCustomToggleButton x:ConnectionId='4' x:Uid="InkDrawPicture_TouchInkingButton" Background="Transparent"                                              >
                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" Glyph="&#xED5F;" />
                </InkToolbarCustomToggleButton>
                <InkToolbarCustomToggleButton x:ConnectionId='5' x:Uid="InkDrawPicture_MouseInkingButton" Background="Transparent"                                              >
                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" Glyph="&#xE962;" />
                </InkToolbarCustomToggleButton>
            </InkToolbar>
        </DataTemplate>
    </Page.Resources>

    <Grid x:ConnectionId='19' x:Name="ContentArea">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:ConnectionId='20' x:Name="visualStateGroup"                                                           >
                <VisualState x:ConnectionId='21' x:Name="SmallVisualState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:ConnectionId='22' x:Name="BigVisualState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="720" />
                    </VisualState.StateTriggers>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ScrollViewer x:ConnectionId='23'
            x:Name="canvasScroll"
            Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            ZoomMode="Enabled">
                <Grid
                    Background="{StaticResource InkCanvasBackground}"
                    Width="{Binding ElementName=inkCanvas, Path=Width}"
                    Height="{Binding ElementName=inkCanvas, Path=Height}">
                    <Image x:ConnectionId='32'
                        x:Name="image"
                                                                      
                        Stretch="None" />                    
                    <InkCanvas x:ConnectionId='33'
                        x:Name="inkCanvas"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch" />
            </Grid>
        </ScrollViewer>        
        <CommandBar x:ConnectionId='24'
            x:Name="bottomCommandBar"
            Grid.Row="1"
            Style="{StaticResource InkCommandBarStyle}">
            <CommandBar.PrimaryCommands>
                <AppBarButton x:ConnectionId='25' x:Uid="InkDrawPicture_ZoomInButton" Icon="ZoomIn"                                            BorderBrush="Transparent" BorderThickness="0,0,0,0" />
                <AppBarButton x:ConnectionId='26' x:Uid="InkDrawPicture_ZoomOutButton" Icon="ZoomOut"                                             BorderBrush="Transparent" BorderThickness="0,0,0,0" />
            </CommandBar.PrimaryCommands>
            <CommandBar.SecondaryCommands>
                <AppBarButton x:ConnectionId='27' x:Uid="InkDrawPicture_OriginalSizeButton" Icon="FullScreen"                                               BorderBrush="Transparent" BorderThickness="0,0,0,0" />
                <AppBarButton x:ConnectionId='28' x:Uid="InkDrawPicture_FitToScreenButton"                                                 BorderBrush="Transparent" BorderThickness="0,0,0,0">
                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" Glyph="&#xE73F;" />
                </AppBarButton>
                <AppBarSeparator />
                <AppBarButton x:ConnectionId='29' x:Uid="InkDrawPicture_OpenImageButton"                                               BorderBrush="Transparent" BorderThickness="0,0,0,0">
                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" Glyph="&#xEB9F;" />
                </AppBarButton>
                <AppBarButton x:ConnectionId='30' x:Uid="InkDrawPicture_SaveImageButton" Icon="Save"                                               BorderBrush="Transparent" BorderThickness="0,0,0,0" />
                <AppBarSeparator/>
                <AppBarButton x:ConnectionId='31' x:Uid="InkDrawPicture_ClearAllButton" Icon="Delete"                                              BorderBrush="Transparent" BorderThickness="0,0,0,0" />
            </CommandBar.SecondaryCommands>
        </CommandBar>
    </Grid>
</Page>

